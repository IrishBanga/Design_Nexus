    <script>
      function checkWindowSize() {
        if (window.innerWidth > 800) {
          document.querySelector(".news").style.display = "block";
          document.querySelector(".news-container").style.display = "block";
          document.querySelector(".events-container").style.display = "block";
        }
      }
      document.getElementById("newsBtn").addEventListener("click", function () {
        document.getElementById("eventsBtn").style.backgroundColor = "#fff";
        document.getElementById("newsBtn").style.backgroundColor = "#ec1e27";
        document.getElementById("newsBtn").style.color = "#fff";
        document.getElementById("newsBtn").style.borderColor = "#ec1e27";
        document.getElementById("eventsBtn").style.color = "#757575";
        document.getElementById("eventsBtn").style.borderColor = "#fff";
        document.querySelector(".events-container").style.display = "none";
        document.querySelector(".news").style.display = "block";
        document.querySelector(".news-container").style.display = "block";
      });

      document
        .getElementById("eventsBtn")
        .addEventListener("click", function () {
          document.getElementById("eventsBtn").style.backgroundColor =
            "#ec1e27";
          document.getElementById("eventsBtn").style.borderColor = "#ec1e27";
          document.getElementById("newsBtn").style.borderColor = "#fff";
          document.getElementById("eventsBtn").style.color = "#fff";
          document.getElementById("newsBtn").style.color = "#757575";
          document.getElementById("newsBtn").style.backgroundColor = "#fff";
          document.querySelector(".news").style.display = "none";
          document.querySelector(".news-container").style.display = "none";
          document.querySelector(".events-container").style.display = "block";
          document.querySelector(".events-container").style.minHeight = "80vh";
        });
      window.addEventListener("resize", checkWindowSize);
      window.onload = checkWindowSize;
